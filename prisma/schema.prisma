generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LotteryRounds {
  id                    Int       @id @default(autoincrement())
  areSubmissionsAllowed Boolean   @default(true)
  drawnNumbers          Int[]
  tickets               Tickets[]
}

model Users {
  id      Int       @id @default(autoincrement())
  email   String    @unique
  tickets Tickets[]
}

model Tickets {
  id               Int           @id @default(autoincrement())
  uuid             String        @unique
  predictedNumbers Int[]
  idCardNumber     String
  userId           Int
  user             Users         @relation(fields: [userId], references: [id])
  lotteryRoundId   Int
  lotteryRound     LotteryRounds @relation(fields: [lotteryRoundId], references: [id])
}
