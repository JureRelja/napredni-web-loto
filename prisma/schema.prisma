generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LotteryRounds {
  id                    Int       @id
  areSubmissionsAllowed Boolean   @default(true)
  drawnNumbers          Int[]
  tickets               Tickets[]
}

model Users {
  id      Int       @id
  email   String    @unique
  tickets Tickets[]
}

model Tickets {
  id               String        @id @default(uuid())
  qrCodeImageLink  String
  publicLink       String
  predictedNumbers Int[]
  idCardNumber     String
  userId           Int
  user             Users         @relation(fields: [userId], references: [id])
  lotteryRoundId   Int
  lotteryRound     LotteryRounds @relation(fields: [lotteryRoundId], references: [id])
}
